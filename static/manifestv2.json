{
    "name": "Raffles Bulletin of Zoology Metadata Reviewer",
    "description": "A Cross-Browser Extension for Metadata Review (RBZ only)",
    "version": "0.1.0",
    "manifest_version": 2,
    "permissions": [
        "downloads"
    ],
    "browser_action": {},
    "background": {
        "scripts": ["background_script/detect_browser_actions.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script/inject_html.js"
            ]
        }
    ]
}