{
    "name": "Academic Review Plugin",
    "description": "A Cross Borwser Template for Firefox",
    "version": "1.0.0",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "browser_action": {},
    "background": {
        "scripts": ["background_script/detect_browser_actions.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script/inject_html.js"
            ]
        }
    ]
}